# Application
APP_NAME=daily-trade-backend
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# DynamoDB Tables
DYNAMODB_TABLE_PREFIX=daily-trade-
DYNAMODB_USERS_TABLE=${DYNAMODB_TABLE_PREFIX}users
DYNAMODB_WATCHLISTS_TABLE=${DYNAMODB_TABLE_PREFIX}watchlists
DYNAMODB_RISK_PARAMETERS_TABLE=${DYNAMODB_TABLE_PREFIX}risk-parameters
DYNAMODB_TRADE_JOURNAL_TABLE=${DYNAMODB_TABLE_PREFIX}trade-journal
DYNAMODB_SIGNAL_HISTORY_TABLE=${DYNAMODB_TABLE_PREFIX}signal-history

# OpenSearch
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.us-east-1.es.amazonaws.com
OPENSEARCH_INDEX_NAME=trading-knowledge
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# S3 Buckets
S3_BUCKET_DOCUMENTS=daily-trade-documents
S3_BUCKET_EMBEDDINGS=daily-trade-embeddings
S3_BUCKET_MARKET_DATA=daily-trade-market-data

# AWS Bedrock
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID_LLM=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MODEL_ID_EMBEDDINGS=amazon.titan-embed-text-v1
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# Market Data
MARKET_DATA_PROVIDER=yfinance
MARKET_DATA_CACHE_TTL=3600
MARKET_DATA_HISTORY_DAYS=730

# RAG Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_RESULTS=10
RAG_EMBEDDING_DIMENSION=1024

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Signal Generation
SIGNAL_CONFIDENCE_THRESHOLD=50
SIGNAL_MAX_DAILY_SIGNALS=5
SIGNAL_HOLDING_PERIOD_MIN_DAYS=3
SIGNAL_HOLDING_PERIOD_MAX_DAYS=14

# User Defaults
DEFAULT_MAX_POSITION_SIZE_PCT=10
DEFAULT_MAX_DRAWDOWN_PCT=20
DEFAULT_PROFIT_TARGET=1000
